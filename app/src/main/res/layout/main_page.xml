<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/bg_main_page_color"
	android:padding="20dp">

	<TextView
		android:id="@+id/welcome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Welcome, "
		android:textColor="@color/white"
		android:textStyle="bold"
		android:textSize="30sp"/>


	<androidx.gridlayout.widget.GridLayout
		android:id="@+id/pholder"
		android:layout_below="@+id/welcome"
		android:layout_width="match_parent"
		android:layout_height="150dp"
		app:columnCount="1"
		app:rowCount="1">

		<androidx.cardview.widget.CardView
			android:id="@+id/GoProfile"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			app:cardCornerRadius="8dp"
			app:cardElevation="8dp"
			app:layout_row="0"
			app:layout_column="0"
			app:layout_gravity="fill"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Username"
				android:textAlignment="center"
				android:textStyle="bold"
				android:textSize="45dp"
				android:layout_gravity="center"
				android:layout_marginLeft="50dp"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_gravity="center_vertical"
				android:padding="20dp">
				<ImageView
					android:layout_width="95dp"
					android:layout_height="95dp"
					android:src="@drawable/user"/>

			</LinearLayout>


		</androidx.cardview.widget.CardView>


	</androidx.gridlayout.widget.GridLayout>
	<androidx.gridlayout.widget.GridLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/pholder"
		app:rowCount="3"
		app:columnCount="2">


		<androidx.cardview.widget.CardView
			android:id="@+id/GoCourse"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			app:cardCornerRadius="8dp"
			app:cardElevation="8dp"
			app:layout_row="1"
			app:layout_column="0"
			app:layout_rowWeight="1"
			app:layout_gravity="fill"
			app:layout_columnWeight="1">


			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_gravity="center_horizontal|center_vertical">
				<ImageView
					android:layout_width="95dp"
					android:layout_height="95dp"
					android:src="@drawable/study"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="LEARN"
					android:textStyle="bold"
					android:textAlignment="center"/>
			</LinearLayout>

		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/GoExe"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			app:cardCornerRadius="8dp"
			app:cardElevation="8dp"
			app:layout_row="1"
			app:layout_column="1"
			app:layout_gravity="fill"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_gravity="center_horizontal|center_vertical">
				<ImageView
					android:layout_width="95dp"
					android:layout_height="95dp"
					android:src="@drawable/test"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="EXERCISE"
					android:textStyle="bold"
					android:textAlignment="center"/>
			</LinearLayout>

		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/GoQuiz"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			app:cardCornerRadius="8dp"
			app:cardElevation="8dp"
			app:layout_row="2"
			app:layout_column="0"
			app:layout_rowWeight="1"
			app:layout_gravity="fill"
			app:layout_columnWeight="1">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|center_vertical"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="95dp"
					android:layout_height="95dp"
					android:src="@drawable/countdown" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="30s Quiz Game"
					android:textAlignment="center"
					android:textStyle="bold" />
			</LinearLayout>


		</androidx.cardview.widget.CardView>

		<androidx.cardview.widget.CardView
			android:id="@+id/GoPuz"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="8dp"
			app:cardCornerRadius="8dp"
			app:cardElevation="8dp"
			app:layout_row="2"
			app:layout_column="1"
			app:layout_rowWeight="1"
			app:layout_columnWeight="1"
			app:layout_gravity="fill">

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center"
				android:layout_gravity="center_horizontal|center_vertical">
				<ImageView
					android:layout_width="95dp"
					android:layout_height="95dp"
					android:src="@drawable/crossword"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Puzzle Game"
					android:textStyle="bold"
					android:textAlignment="center"/>
			</LinearLayout>


		</androidx.cardview.widget.CardView>

	</androidx.gridlayout.widget.GridLayout>

</RelativeLayout>