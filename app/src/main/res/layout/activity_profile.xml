<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.homegrowneducation.mainPage.ProfilePage">

    <RelativeLayout android:id="@+id/main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main_page_color">


        <RelativeLayout android:id="@+id/profile"
            android:layout_marginTop="90dp"
            android:layout_marginStart="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_ek1">

            <ImageView android:id="@+id/profile_ek1"
                android:src="@drawable/profile_ek1"
                android:contentDescription="profile_ek1"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="320dp"
                android:layout_height="112dp" />

            <TextView android:id="@+id/username"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/username_color"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_string"
                />


            <ImageView android:id="@+id/profile_image"
                android:layout_marginTop="16dp"
                android:layout_marginStart="26dp"
                android:src="@drawable/default_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/gmail"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/username_color"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yourname@gmail.com" />

        </RelativeLayout>


        <RelativeLayout android:id="@+id/acitivities"
            android:layout_marginTop="230dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:src="@drawable/activities_blog"
            >

            <ImageView
                android:id="@+id/activities_blog"
                android:layout_width="353dp"
                android:layout_height="match_parent"
                android:contentDescription="activities_blog"
                android:src="@drawable/activities_blog" />

            <TextView
                android:id="@+id/course_text"
                android:layout_width="98dp"
                android:layout_height="54dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="340dp"
                android:text="Logout"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView android:id="@+id/quiz_text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Account"
                />

            <ImageView
                android:id="@+id/quiz_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:contentDescription="_60_seconds_1"
                android:src="@drawable/acc" />

            <TextView
                android:id="@+id/exercise"
                android:layout_width="93dp"
                android:layout_height="51dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="210dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="About Us" />

            <ImageView android:id="@+id/myAccount_arrow"
                android:src="@drawable/main_arrow_left"
                android:layout_marginTop="70dp"
                android:layout_marginStart="260dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />


            <ImageView
                android:id="@+id/aboutUs_arrow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="260dp"
                android:layout_marginTop="200dp"
                android:src="@drawable/main_arrow_left" />

            <ImageView android:id="@+id/logout_arrow"
                android:src="@drawable/main_arrow_left"
                android:layout_marginTop="340dp"
                android:layout_marginStart="260dp"
                android:layout_width="48dp"
                android:layout_height="48dp" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="190dp"
                app:srcCompat="@drawable/ellipse_645" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="200dp"
                app:srcCompat="@drawable/heart" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="57dp"
                android:layout_height="56dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="330dp"
                app:srcCompat="@drawable/logout__1_" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:alpha="0.75"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/back_icon" />

    </RelativeLayout>

</layout>