<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mainPage.myAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main_page_color">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:alpha="0.75"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="38dp"
            android:layout_height="37dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/back_icon" />

        <TextView
            android:id="@+id/profiletitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:textSize="56sp"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"
            android:layout_marginStart="50dp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
    android:layout_width="353dp"
    android:layout_height="550dp"
    tools:context=".mainPage.MyAccountActivity"
            android:backgroundTint="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24sp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"/>
            <TextView
                android:id="@+id/tvchangename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Username"
                android:layout_marginTop="100dp"
                android:layout_marginStart="30dp"
                android:textSize="18sp" />

    <EditText
        android:id="@+id/etnewname"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your new name"
        android:layout_marginTop="150dp"
        android:layout_marginStart="30dp" />

    <Button
        android:id="@+id/btnchangename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/tvchangepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:layout_marginTop="300dp"
                android:layout_marginStart="30dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etresetemail"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Enter your email address"
                android:text=""
                android:layout_marginTop="350dp"
                android:layout_marginStart="30dp" />


            <Button
                android:id="@+id/btnresetpage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:layout_marginTop="400dp"
                android:layout_marginStart="30dp"/>



        </androidx.cardview.widget.CardView>

</RelativeLayout>
</layout>